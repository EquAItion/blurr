<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Input field glass base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_surface" />
            <corners android:radius="20dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/glass_border" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:insetTop="1dp" android:insetBottom="1dp" 
          android:insetLeft="1dp" android:insetRight="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_surface_light" />
            <corners android:radius="19dp" />
        </shape>
    </item>
    
    <!-- Focus glow (subtle) -->
    <item android:insetTop="2dp" android:insetBottom="2dp" 
          android:insetLeft="2dp" android:insetRight="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#0D00F5FF"
                android:endColor="#0A8A2BE2" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>