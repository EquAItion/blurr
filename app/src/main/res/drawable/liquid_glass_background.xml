<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>
    
    <!-- Subtle gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.3"
                android:centerY="0.2"
                android:gradientRadius="800dp"
                android:startColor="#0D00F5FF"
                android:centerColor="#0A8A2BE2"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Secondary gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.8"
                android:centerY="0.7"
                android:gradientRadius="600dp"
                android:startColor="#0AFF1493"
                android:centerColor="#080080FF"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>