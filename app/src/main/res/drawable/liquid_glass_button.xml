<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#4000F5FF">
    
    <item android:id="@android:id/background">
        <layer-list>
            <!-- Glass button base -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_surface_light" />
                    <corners android:radius="24dp" />
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/glass_border" />
                </shape>
            </item>
            
            <!-- Neon gradient overlay -->
            <item android:insetTop="1dp" android:insetBottom="1dp" 
                  android:insetLeft="1dp" android:insetRight="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="45"
                        android:startColor="#3300F5FF"
                        android:centerColor="#268A2BE2"
                        android:endColor="#1AFF1493" />
                    <corners android:radius="23dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</ripple>