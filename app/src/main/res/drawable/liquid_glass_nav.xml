<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass navigation background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_surface" />
            <corners 
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    
    <!-- Top border glow -->
    <item android:insetBottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_border" />
            <corners 
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    
    <!-- Inner surface -->
    <item android:insetTop="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_surface_light" />
            <corners 
                android:topLeftRadius="31dp"
                android:topRightRadius="31dp" />
        </shape>
    </item>
    
    <!-- Subtle gradient -->
    <item android:insetTop="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#1A00F5FF"
                android:endColor="#0D8A2BE2" />
            <corners 
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
        </shape>
    </item>
</layer-list>