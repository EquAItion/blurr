<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#6600F5FF">
    
    <item android:id="@android:id/background">
        <layer-list>
            <!-- Shadow/Glow effect -->
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="32dp"
                        android:startColor="#4000F5FF"
                        android:centerColor="#2600F5FF"
                        android:endColor="#00000000" />
                </shape>
            </item>
            
            <!-- Main FAB surface -->
            <item android:insetTop="4dp" android:insetBottom="4dp" 
                  android:insetLeft="4dp" android:insetRight="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/glass_surface_light" />
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/glass_border" />
                </shape>
            </item>
            
            <!-- Gradient overlay -->
            <item android:insetTop="5dp" android:insetBottom="5dp" 
                  android:insetLeft="5dp" android:insetRight="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#4000F5FF"
                        android:centerColor="#338A2BE2"
                        android:endColor="#26FF1493" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</ripple>