<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Aurora gradient base -->
    <item>
        <shape>
            <gradient
                android:startColor="#1A1A2E"
                android:centerColor="#16213E"
                android:endColor="#0F3460"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    <!-- Subtle overlay for depth -->
    <item>
        <shape>
            <gradient
                android:startColor="#10667eea"
                android:centerColor="#10764ba2"
                android:endColor="#10f093fb"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
</layer-list>